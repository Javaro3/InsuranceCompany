@model Models.Models.Policy

@{
    ViewData["Title"] = "Удаление полисов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card mb-3">
        <h3 class="card-header text-primary text-center">@Model.PolicyNumber</h3>
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayNameFor(model => Model.PolicyPayment)</h5>
            <h6 class="card-subtitle text-muted">@Model.PolicyPayment $</h6>

            <h5 class="card-title">@Html.DisplayNameFor(model => Model.ApplicationDate)</h5>
            <h6 class="card-subtitle text-muted">@Model.ApplicationDate.ToShortDateString()</h6>

            <h5 class="card-title">@Html.DisplayNameFor(model => Model.PolicyTerm)</h5>
            <h6 class="card-subtitle text-muted">@Model.PolicyTerm мес.</h6>

            <h5 class="card-title">@Html.DisplayNameFor(model => Model.InsuranceType.Name)</h5>
            <h6 class="card-subtitle text-muted">@Model.InsuranceType.Name</h6>

            <h5 class="card-title">@Html.DisplayNameFor(model => Model.InsuranceAgentId)</h5>
            <h6 class="card-subtitle text-muted">@Model.InsuranceAgent.Surname @Model.InsuranceAgent.Name @Model.InsuranceAgent.MiddleName</h6>
        </div>
        <div class="card-footer d-flex justify-content-start">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" />
                <a asp-controller="PolicyClients" asp-action="Index" class="btn btn-primary">Отменить</a>
            </form>
        </div>
    </div>
</div>