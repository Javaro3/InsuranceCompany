@model ValueTuple<Contract, IEnumerable<InsuranceAgent>>

@{
    ViewData["Title"] = "Детали о контракте";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title text-primary text-center">Информация о контракте</h5>
        </div>
        <div class="card-body row d-flex align-items-center text-center">
            <div class="col">
                <h5 class="card-text text-primary"><strong>Ответственность</strong></h5>
                <h6 class="card-text">@Model.Item1.Responsibilities</h6>
                <h5 class="card-text text-primary"><strong>Начало контракта</strong></h5>
                <h6 class="card-text">@Model.Item1.StartDeadline.ToShortDateString()</h6>
                <h5 class="card-text text-primary"><strong>Конец контракта</strong></h5>
                <h6 class="card-text">@Model.Item1.EndDeadline.ToShortDateString()</h6>
                <h5 class="card-text text-primary"><strong>Зарплата</strong></h5>
                <h6 class="card-text">@Model.Item1.Salary $</h6>
                <h5 class="card-text text-primary"><strong>Процент от сделки</strong></h5>
                <h6 class="card-text">@Model.Item1.TransactionPercent</h6>
            </div>
            <div class="col">
                <h5 class="card-text text-primary text-center"><strong>Список страховых агентов которые подписали контракт</strong></h5>
                    @if(Model.Item2.Count() > 0) {
                    <div class="overflow-auto" style="height: 200px;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Фамилия
                                    </th>
                                    <th>
                                        Имя
                                    </th>
                                    <th>
                                        Отчество
                                    </th>
                                    <th>
                                        Тип агента
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var insuranceAgent in Model.Item2) {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => insuranceAgent.Surname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => insuranceAgent.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => insuranceAgent.MiddleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => insuranceAgent.AgentType.Type)
                                            </td>
                                        </tr>
                                    }
                            </tbody>
                        </table>
                </div>
                }
                else {
                    <h1 class="text-primary text-center">Нет страховых агентов которые подписали этот контракт</h1>
                }
            </div>

        </div>
        <div class="d-flex justify-content-between mb-3">
            <a class="btn btn-primary" asp-action="Index">Вернуться к списку</a> 
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Item1.Id">Редактировать</a>
        </div>
    </div>
</div>