@using InsuranceCompany.Utilities;
@model Contract

@{
    ViewData["Title"] = "Детали о контракте";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card mb-3">
        <h3 class="card-header text-primary text-center">@Model.Responsibilities</h3>
        <div class="card-body">
            <div class="card-body row d-flex align-items-center">
                <div class="col">
                    <h5 class="card-title">@Html.DisplayNameFor(model => model.StartDeadline)</h5>
                    <h6 class="card-subtitle text-muted">@Model.StartDeadline.ToShortDateString()</h6>

                    <h5 class="card-title">@Html.DisplayNameFor(model => model.EndDeadline)</h5>
                    <h6 class="card-subtitle text-muted">@Model.EndDeadline.ToShortDateString()</h6>

                    <h5 class="card-title">@Html.DisplayNameFor(model => model.Salary)</h5>
                    <h6 class="card-subtitle text-muted">@Model.Salary $</h6>

                    <h5 class="card-title">@Html.DisplayNameFor(model => model.TransactionPercent)</h5>
                    <h6 class="card-subtitle text-muted">@Model.TransactionPercent</h6>
                </div>
                <div class="col">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button text-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Список страховых агентов
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    @if (Model.InsuranceAgents.Count() > 0) {
                                        <div class="overflow-auto" style="height: 180px;">
                                            @foreach (var insuranceAgent in Model.InsuranceAgents) {
                                                <div class="card mb-3">
                                                    <h3 class="card-header text-primary">@insuranceAgent.Surname @insuranceAgent.Name @insuranceAgent.MiddleName</h3>
                                                    <div class="card-body">
                                                        <h5 class="card-title">@Html.DisplayNameFor(model => insuranceAgent.AgentType.Type)</h5>
                                                        <h6 class="card-subtitle text-muted">@insuranceAgent.AgentType.Type</h6>
                                                    </div>
                                                    <div class="card-footer d-flex justify-content-end">
                                                        <a class="text-decoration-none mx-1" asp-action="Edit" asp-controller="InsuranceAgents" asp-route-id="@insuranceAgent.Id">
                                                            @Html.EditIcon(28, 28)
                                                        </a>
                                                        <a class="text-decoration-none mx-1" asp-action="Delete" asp-controller="InsuranceAgents" asp-route-id="@insuranceAgent.Id">
                                                            @Html.DeleteIcon(28, 28)
                                                        </a>
                                                        <a class="text-decoration-none mx-1" asp-action="Details" asp-controller="InsuranceAgents" asp-route-id="@insuranceAgent.Id">
                                                            @Html.InfoIcon(28, 28)
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else {
                                        <h3 class="card-header text-primary text-center">Страховых агентов нет</h3>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-start">
            <a class="btn btn-primary mx-2" asp-action="Index">Вернуться к списку</a>
            <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
        </div>
    </div>
</div>