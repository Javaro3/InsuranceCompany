@model InsuranceCompany.Models.Contract

@{
    ViewData["Title"] = "Удаление контрактов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title text-primary text-center">Информация о контракте</h5>
        </div>
        <div class="card-body row d-flex align-items-center text-center">
            <div class="col">
                <h5 class="card-text text-primary"><strong>Обязанности</strong></h5>
                <h6 class="card-text">@Model.Responsibilities</h6>
                <h5 class="card-text text-primary"><strong>Начало контракта</strong></h5>
                <h6 class="card-text">@Model.StartDeadline.ToShortDateString()</h6>
                <h5 class="card-text text-primary"><strong>Конец контракта</strong></h5>
                <h6 class="card-text">@Model.EndDeadline.ToShortDateString()</h6>
                <h5 class="card-text text-primary"><strong>Зарплата</strong></h5>
                <h6 class="card-text">@Model.Salary $</h6>
                <h5 class="card-text text-primary"><strong>Процент от сделки</strong></h5>
                <h6 class="card-text">@Model.TransactionPercent</h6>
            </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" /> |
                <button asp-controller="Contracts" asp-action="Index" class="btn btn-primary">Отменить</button>
            </form>
        </div>
    </div>
</div>