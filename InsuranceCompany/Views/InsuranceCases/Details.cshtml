@using InsuranceCompany.Utilities
@model Models.Models.InsuranceCase

@{
    ViewData["Title"] = "Детали о страховых случаях";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card mb-3">
        <h3 class="card-header text-primary text-center">@Model.Date</h3>
        <div class="card-body">
            <div class="card-body row d-flex align-items-center">
                <div class="col">
                    <h5 class="card-title">@Html.DisplayNameFor(model => Model.InsurancePayment)</h5>
                    <h6 class="card-subtitle text-muted">@Model.InsurancePayment $</h6>

                    <h5 class="card-title">@Html.DisplayNameFor(model => Model.SupportingDocument.Name) страхового документа</h5>
                    <h6 class="card-subtitle text-muted">@Model.SupportingDocument.Name</h6>

                    <h5 class="card-title">@Html.DisplayNameFor(model => Model.Description)</h5>
                    <h6 class="card-subtitle text-muted">@Model.Description</h6>
                </div>
                <div class="col">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button text-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Клиент
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="card mb-3">
                                        <h3 class="card-header text-primary">@Model.Client.Surname @Model.Client.Name @Model.Client.MiddleName</h3>
                                        <div class="card-body">
                                            <h5 class="card-title">@Html.DisplayNameFor(model => Model.Client.Birthdate)</h5>
                                            <h6 class="card-subtitle text-muted">@Model.Client.Birthdate.ToShortDateString()</h6>

                                            <h5 class="card-title">@Html.DisplayNameFor(model => Model.Client.MobilePhone)</h5>
                                            <h6 class="card-subtitle text-muted">@Model.Client.MobilePhone</h6>

                                            <h5 class="card-title">@Html.DisplayNameFor(model => Model.Client.Address)</h5>
                                            <h6 class="card-subtitle text-muted">@Model.Client.Address</h6>

                                            <h5 class="card-title">@Html.DisplayNameFor(model => Model.Client.PassportNumber)</h5>
                                            <h6 class="card-subtitle text-muted">@Model.Client.PassportNumber</h6>

                                            <h5 class="card-title">@Html.DisplayNameFor(model => Model.Client.PassportIssueDate)</h5>
                                            <h6 class="card-subtitle text-muted">@Model.Client.PassportIssueDate.ToShortDateString()</h6>
                                        </div>
                                        <div class="card-footer d-flex justify-content-end">
                                            <a class="text-decoration-none mx-1" asp-action="Edit" asp-controller="Clients" asp-route-id="@Model.ClientId">
                                                @Html.EditIcon(28, 28)
                                            </a>
                                            <a class="text-decoration-none mx-1" asp-action="Delete" asp-controller="Clients" asp-route-id="@Model.ClientId">
                                                @Html.DeleteIcon(28, 28)
                                            </a>
                                            <a class="text-decoration-none mx-1" asp-action="Details" asp-controller="Clients" asp-route-id="@Model.ClientId">
                                                @Html.InfoIcon(28, 28)
                                            </a>
                                        </div>
                                    </div>
                                     
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-start">
            <a class="btn btn-primary mx-2" asp-action="Index">Вернуться к списку</a>
        </div>
    </div>
</div>