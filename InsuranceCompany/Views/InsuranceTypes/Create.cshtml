@model Models.Models.InsuranceType

@{
    ViewData["Title"] = "Добавить тип страхования";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="display-4 text-primary text-center">Добавить</h1>
<div class="row d-flex justify-content-center mb-2">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" autocomplete="@Html.DisplayNameFor(model => model.Name)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.Name)" />
                <label asp-for="Name">@Html.DisplayNameFor(model => model.Name)</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" autocomplete="@Html.DisplayNameFor(model => model.Description)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.Description)" />
                <label asp-for="Description">@Html.DisplayNameFor(model => model.Description)</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <input type="submit" value="Сохранить" class="w-100 btn btn-lg btn-primary mt-2" />
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
