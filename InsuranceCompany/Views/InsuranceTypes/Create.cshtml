@model InsuranceCompany.Models.InsuranceType

@{
    ViewData["Title"] = "Добавить тип страхования";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Добавить тип страхования</h1>
<div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Описание</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="submit" value="Добавить" class="w-100 btn btn-lg btn-primary mt-2" />
            </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
