@model InsuranceCompany.Models.InsuranceType

@{
    ViewData["Title"] = "Удаление типов страховок";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>
<div>
    <h4>Тип страховки</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <button asp-controller="InsuranceTypes" asp-action="Index" class="btn btn-primary">Отменить</button>
    </form>
</div>
