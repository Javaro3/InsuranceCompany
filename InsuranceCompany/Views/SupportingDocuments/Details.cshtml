@model InsuranceCompany.Models.SupportingDocument

@{
    ViewData["Title"] = "Детали о подтверждающем документе";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title text-primary text-center">Информация о подтверждающем документе</h5>
        </div>
        <div class="card-body row d-flex align-items-center text-center">
            <div class="col">
                <h5 class="card-text text-primary"><strong>Название</strong></h5>
                <h6 class="card-text">@Model.Name</h6>
                <h5 class="card-text text-primary"><strong>Описание</strong></h5>
                <h6 class="card-text">@Model.Description</h6>
            </div>
            <div class="col">
                <h5 class="card-text text-primary text-center"><strong>Страховые случаи</strong></h5>
                @if (Model.InsuranceCases.Count() > 0) {
                    <div class="overflow-auto" style="height: 200px;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Дата
                                    </th>
                                    <th>
                                        Страховая выплата
                                    </th>
                                    <th>
                                        Описание
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var insuranceCase in Model.InsuranceCases) {
                                    <tr>
                                        <td>
                                            @insuranceCase.Date.ToShortDateString()
                                        </td>
                                        <td>
                                            @insuranceCase.InsurancePayment $
                                        </td>
                                        <td>
                                            @insuranceCase.Description
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else {
                    <h1 class="text-primary text-center">Нет страховых случаев с этим подтверждающим документом</h1>
                }
            </div>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <a class="btn btn-primary" asp-action="Index">Вернуться к списку</a>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
        </div>
    </div>
</div>