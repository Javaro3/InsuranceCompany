@using InsuranceCompany.Utilities;
@using InsuranceCompany.ViewModels;
@model PageModel<SupportingDocument, SupportingDocumentFilterModel>;

@{
    ViewData["Title"] = "Подтверждающие документы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Фильтры</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form asp-action="Index">
            <div class="form-floating mb-3">
                <input name="Name" asp-for="@Model.FilterModel.Name" class="form-control" placeholder="@Html.DisplayNameFor(model => model.FilterModel.Name)" />
                <label asp-for="@Model.FilterModel.Name">@Html.DisplayNameFor(model => model.FilterModel.Name)</label>
            </div>

            <div class="form-floating mb-3">
                <select class="form-select" name="SortTypeName" asp-for="@Model.FilterModel.SortTypeName">
                    <option value="0">Без сортировки</option>
                    <option value="1">По возрастанию</option>
                    <option value="2">По убыванию</option>
                </select>
                <label asp-for="@Model.FilterModel.SortTypeName">@Html.DisplayNameFor(model => model.FilterModel.SortTypeName)</label>
            </div>

            <div class="card-footer mb-3 text-center">
                <button type="submit" class="btn btn-primary btn-block">Применить</button>
            </div>
        </form>
    </div>
</div>

<h1 class="display-4 text-primary text-center">Подтверждающие документы</h1>
<div class="d-flex justify-content-between mb-2">
    <a class="btn btn-primary text-decoration-none" asp-action="Create">
        @Html.AddIcon(32, 32)
    </a>
    <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
        @Html.FilterIcon(32, 32)
    </button>
</div>

<div class="row">
    @foreach (var supportingDocument in Model.Entities) {
        <div class="col-md-4">
            <div class="card mb-3" style="min-height: 15rem">
                <h3 class="card-header text-primary">@supportingDocument.Name</h3>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayNameFor(model => supportingDocument.Description)</h5>
                    <h6 class="card-subtitle text-muted">@supportingDocument.Description</h6>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <a class="text-decoration-none mx-1" asp-action="Edit" asp-route-id="@supportingDocument.Id">
                        @Html.EditIcon(28, 28)
                    </a>
                    <a class="text-decoration-none mx-1" asp-action="Delete" asp-route-id="@supportingDocument.Id">
                        @Html.DeleteIcon(28, 28)
                    </a>
                    <a class="text-decoration-none mx-1" asp-action="Details" asp-route-id="@supportingDocument.Id">
                        @Html.InfoIcon(28, 28)
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-center align-items-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++) {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = Model.PageSize })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>