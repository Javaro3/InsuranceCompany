@model InsuranceCompany.Models.InsuranceCase

@{
    ViewData["Title"] = "Детали о страховом случае";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title text-primary text-center">Информация о страховом случае</h5>
        </div>
        <div class="card-body row d-flex align-items-center text-center">
            <div class="col">
                <h5 class="card-title text-center text-primary">@Model.Date.ToShortDateString()</h5>
                <p class="card-text"><strong>Страховая выплата:</strong> @Model.InsurancePayment</p>
                <p class="card-text"><strong>Описание:</strong> @Model.Description</p>
                <p class="card-text"><strong>Подтверждающий документ:</strong> @Model.SupportingDocument.Name</p>
                <p class="card-text"><strong>Описание подтверждающего документа:</strong> @Model.SupportingDocument.Description
            </div>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <a class="btn btn-primary" asp-action="Index">Вернуться к списку</a>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
        </div>
    </div>
</div>
