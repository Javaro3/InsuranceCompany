@model InsuranceCompany.Models.InsuranceCase

@{
    ViewData["Title"] = "Добавить страховой случай";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-primary text-center">Добавить</h1>
<div class="row d-flex justify-content-center mb-2">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Date" type="date" class="form-control" autocomplete="@Html.DisplayNameFor(model => model.Date)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.Date)" />
                <label asp-for="Date">@Html.DisplayNameFor(model => model.Date)</label>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" autocomplete="@Html.DisplayNameFor(model => model.Description)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.Description)" />
                <label asp-for="Description">@Html.DisplayNameFor(model => model.Description)</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="InsurancePayment" type="number" step="any" class="form-control" autocomplete="@Html.DisplayNameFor(model => model.InsurancePayment)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.InsurancePayment)" />
                <label asp-for="InsurancePayment">@Html.DisplayNameFor(model => model.InsurancePayment)</label>
                <span asp-validation-for="InsurancePayment" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="SupportingDocumentId" class="form-control" asp-items="ViewBag.SupportingDocumentId"></select>
                <label asp-for="SupportingDocumentId">@Html.DisplayNameFor(model => model.SupportingDocumentId)</label>
                <span asp-validation-for="SupportingDocumentId" class="text-danger"></span>
            </div>

            <input type="submit" value="Сохранить" class="w-100 btn btn-lg btn-primary mt-2" />
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}